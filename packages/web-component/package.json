{
  "name": "@mindfiredigital/page-builder-web-component",
  "private": false,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindfiredigital/page-builder.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "start": "serve dist",
