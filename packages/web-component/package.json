    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "@mindfiredigital/page-builder-core": "workspace:*"
  },
  "devDependencies": {
    "eslint": "^9.19.0",
    "tsup": "^6.7.0",
    "typescript": "^5.7.3",
    "serve": "^14.2.4"
